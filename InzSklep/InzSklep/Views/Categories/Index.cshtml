@model IEnumerable<InzSklep.Models.Category>

@{
    ViewBag.Title = "Kategorie";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<p>
    @Html.ActionLink("Dodaj", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.IconFileName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.IconFileName)
        </td>
        <td>
            @Html.ActionLink("Edytuj", "Edit", new { id=item.CategoryId }) |
            @Html.ActionLink("Szczegóły", "Details", new { id=item.CategoryId }) |
            @Html.ActionLink("Usuń", "Delete", new { id=item.CategoryId })
        </td>
    </tr>
}

</table>
