@model IEnumerable<InzSklep.Models.Order>

@{
    ViewBag.Title = "Zamówienia";
    Layout = "~/Views/Shared/_ProfileLayout.cshtml";
}



<table class="table">
    <tr>

        <th>
            Nr.Zamówienia
        </th>
        

        <th>
            @Html.DisplayNameFor(model => model.CreateDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OrderState)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TotalPrice)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>

        <td>
            @Html.DisplayFor(modelItem => item.ForUserOrderId)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.CreateDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.OrderState)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TotalPrice)
        </td>
        <td>
            @Html.ActionLink("Szczegóły", "Details", new { id=item.OrderId })
        </td>
    </tr>
}

</table>
