@model IEnumerable<InzSklep.Models.HotOffer>

@{
    ViewBag.Title = "Oferty";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<p>
    @Html.ActionLink("Dodaj", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Zdjęcie baner
        </th>
        <th>
            Tytuł
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.OfferIMGFile)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.ActionLink("Edytuj", "Edit", new { id = item.HotOfferId }) |
                @Html.ActionLink("Szczegóły", "Details", new { id = item.HotOfferId }) |
                @Html.ActionLink("Usuń", "Delete", new { id = item.HotOfferId })
            </td>
        </tr>
    }

</table>
