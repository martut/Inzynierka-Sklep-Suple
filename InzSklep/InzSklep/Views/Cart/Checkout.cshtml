@model InzSklep.Models.Order

@{
    ViewBag.Title = "Zamówienie";
}

<h2>@ViewBag.Title</h2>


@using (Html.BeginForm("Checkout", "Cart", FormMethod.Post))
{
    @*@Html.AntiForgeryToken()*@

    
        <h4>Dane do zamówienia</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group row">
            @Html.LabelFor(model => model.FirstName, htmlAttributes: new { @class = "col-2 col-form-label" })
            <div class="col-10">
                @Html.TextBoxFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control" } })
